{
  "title": "Non-modal layout switcher",
  "rules": [
    {
      "description": "CapsLock->EN, RightShift+CapsLock->RU",
      "manipulators": [
                {
          "type": "basic",
          "from": {
            "key_code": "caps_lock"
          },
          "to": [
            {
              "select_input_source": {
                "language": "en"
              }
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "caps_lock",
            "modifiers": {
              "mandatory": [
                "right_shift"
              ]
            }
          },
          "to": [
            {
              "select_input_source": {
                "language": "ru"
              }
            }
          ]
        }
      ]
    }
  ]
}
